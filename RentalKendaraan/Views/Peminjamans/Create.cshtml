@model RentalKendaraan.Models.Peminjaman

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Peminjaman</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">ID Peminjaman</label>
                <input asp-for="IdPeminjaman" class="form-control" />
                <span asp-validation-for="IdPeminjaman" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tanggal Peminjaman</label>
                <input asp-for="TglPeminjaman" class="form-control" />
                <span asp-validation-for="TglPeminjaman" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ID Kendaraab</label>
                <select asp-for="IdKendaraan" class ="form-control" asp-items="ViewBag.IdKendaraan"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">ID Customer</label>
                <select asp-for="IdCustomer" class ="form-control" asp-items="ViewBag.IdCustomer"></select>
            </div>
            <div class="form-group">
                <label class="control-label">ID Jaminan</label>
                <select asp-for="IdJaminan" class ="form-control" asp-items="ViewBag.IdJaminan"></select>
            </div>
            <div class="form-group">
                <label class="control-label">BIaya</label>
                <input asp-for="Biaya" class="form-control" />
                <span asp-validation-for="Biaya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
