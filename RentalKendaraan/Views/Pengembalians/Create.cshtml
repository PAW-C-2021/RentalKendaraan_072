@model RentalKendaraan.Models.Pengembalian

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pengembalian</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">ID Pengembalian</label>
                <input asp-for="IdPengembalian" class="form-control" />
                <span asp-validation-for="IdPengembalian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tanggal Pengembalian</label>
                <input asp-for="TglPengembalian" class="form-control" />
                <span asp-validation-for="TglPengembalian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">ID Peminjaman</label>
                <select asp-for="IdPeminjaman" class ="form-control" asp-items="ViewBag.IdPeminjaman"></select>
            </div>
            <div class="form-group">
                <label class="control-label">ID KOndisi</label>
                <select asp-for="IdKondisi" class ="form-control" asp-items="ViewBag.IdKondisi"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Denda</label>
                <input asp-for="Denda" class="form-control" />
                <span asp-validation-for="Denda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
